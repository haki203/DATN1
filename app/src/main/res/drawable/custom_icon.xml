<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="oval"> <!-- Sử dụng android:shape="oval" để tạo hình tròn -->
            <solid android:color="#FFFFFF"/>
            <size android:width="100dp" android:height="100dp"/> <!-- Kích thước của hình tròn -->
            <stroke android:color="#FFFFFF" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" >
        <shape android:shape="oval">
            <solid android:color="#6156E2"/>
            <size android:width="100dp" android:height="100dp"/> <!-- Kích thước của hình tròn -->
            <stroke android:color="#6156E2" android:width="2dp" />
        </shape>
    </item>

</selector>
